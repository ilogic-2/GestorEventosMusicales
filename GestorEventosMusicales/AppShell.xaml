    <ShellContent Route="HomeManagerPage" ContentTemplate="{DataTemplate local:HomeManagerPage}" />
    <ShellContent Route="CreateEventPage" ContentTemplate="{DataTemplate local:CreateEventPage}" />
    <ShellContent Route="ViewEditEventPage" ContentTemplate="{DataTemplate local:ViewEditEventPage}" />
    <ShellContent Route="ViewEditArtistPage" ContentTemplate="{DataTemplate local:ViewEditArtistPage}" />
