<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestorEventosMusicales.Paginas.AddInstrumentPage"
             Title="‚ûï A√±adir Instrumento">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18" BackgroundColor="#FAFAFA">

            <!-- T√≠tulo -->
            <Label Text="üé∂ Nuevo Instrumento"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#333"
                   HorizontalOptions="Center" />

            <!-- Nombre -->
            <Label Text="Nombre del Instrumento" 
                   FontSize="14"
                   TextColor="#555" />
            <Entry x:Name="nombreEntry"
                   Placeholder="Ej: Guitarra el√©ctrica"
                   BackgroundColor="White"
                   TextColor="#333"
                   FontSize="16"
                   HeightRequest="45"
                   Margin="0,0,0,10"
                   />

            <!-- Cantidad -->
            <Label Text="Cantidad"
                   FontSize="14"
                   TextColor="#555" />
            <Entry x:Name="cantidadEntry"
                   Keyboard="Numeric"
                   Placeholder="Ej: 2"
                   BackgroundColor="White"
                   TextColor="#333"
                   FontSize="16"
                   HeightRequest="45"
                   Margin="0,0,0,10"
                   />

            <!-- Proveedor -->
            <Label Text="Proveedor"
                   FontSize="14"
                   TextColor="#555" />
            <Frame BorderColor="#DDD" BackgroundColor="White" CornerRadius="8" Padding="0" HeightRequest="45">
                <Picker x:Name="proveedorPicker"
                        Title="Selecciona proveedor"
                        FontSize="16"
                        TextColor="#333"
                        Margin="10,0">
                    <Picker.Items>
                        <x:String>Ninguno / Organizaci√≥n</x:String>
                        <x:String>Artista</x:String>
                    </Picker.Items>
                </Picker>
            </Frame>

            <!-- Botones -->
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Margin="0,20,0,0">
                <Button Text="üíæ Guardar"
                        Clicked="OnGuardarClicked"
                        BackgroundColor="#00C853"
                        TextColor="White"
                        FontSize="16"
                        Padding="14,8"
                        CornerRadius="10"
                        WidthRequest="120"/>
                <Button Text="‚ùå Cancelar"
                        Clicked="OnCancelarClicked"
                        BackgroundColor="#444"
                        TextColor="White"
                        FontSize="16"
                        Padding="14,8"
                        CornerRadius="10"
                        WidthRequest="120"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
